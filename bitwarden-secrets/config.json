{
    "name": "Bitwarden Secrets",
    "version": "0.0.1",
    "slug": "bw-cli-secrets",
    "description": "Manage Home Assistant secrets easily from Bitwarden's CLI.",
    "arch": [
        "armhf",
        "armv7",
        "amd64",
        "aarch64",
        "i386"
    ],
    "startup": "system",
    "boot": "auto",
    "url": "https://alxx.nl/hassio-addons/tree/bitwarden-secrets/traefik",
    "hassio_role": "default",
    "hassio_api": true,
    "map": [
        "config:rw"
    ],
    "options": {
        "log_level": "info",
        "bitwarden": {
            "server": "http://a0d7b954-bitwarden",
            "username": "homeassistant@localhost.lan",
            "password": "homeassistant",
            "organization": "Home Assistant"
        },
        "repeat": {
            "active": false,
            "interval": 300
        }
    },
    "schema": {
        "log_level": "list(trace|debug|info|notice|warning|error|fatal)",
        "bitwarden": {
            "server": "str",
            "username": "str",
            "password": "str",
            "organization": "str"
        },
        "repeat": {
            "active": "bool",
            "interval": "int"
        }
    }
}